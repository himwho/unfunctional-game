# ===================================================================
# unfunctional - Level 4 Email Support Server
# ===================================================================

# HTTP API port (game client connects here)
HTTP_PORT=3000

# SMTP server port for receiving inbound mail (MX record must point here)
# Port 25 is standard for MX delivery. Use 2525 for local testing.
SMTP_PORT=25

# Domain that this server handles mail for
MAIL_DOMAIN=please.nyc

# The mailbox name Rodney uses (rodney@please.nyc)
RODNEY_MAILBOX=rodney

# OTP code validity in seconds
CODE_TTL_SECONDS=15

# Outbound SMTP relay for sending reply emails.
# If empty, the server will attempt direct delivery (requires port 25 outbound).
# For production, use SES, Mailgun, SendGrid, etc.
SMTP_RELAY_HOST=
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=
SMTP_RELAY_PASS=

# Set to 'true' to log generated codes to stdout (useful for testing)
DEBUG_LOG_CODES=true
